<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgSpriteItem"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="Pokemon Sprite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtNameItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bulbasaur"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/imgSpriteItem"
        app:layout_constraintTop_toTopOf="@id/imgSpriteItem"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/txtIdItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="#001"
        app:layout_constraintStart_toStartOf="@+id/txtNameItem"
        app:layout_constraintTop_toBottomOf="@+id/txtNameItem"
        app:layout_constraintEnd_toEndOf="@+id/txtNameItem"
        android:layout_marginTop="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
